
# ================================================================
# ATELIER AGENCY THEME - ENVIRONMENT VARIABLES
# ================================================================
# Copy this file to .env and fill in your actual values

# ================================================================
# AUTHENTICATION (NextAuth.js) - REQUIRED
# ================================================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Your application URL (change for production)
NEXTAUTH_URL="http://localhost:3000"

# ================================================================
# DATABASE (PostgreSQL via Prisma) - REQUIRED
# ================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/atelier_theme"

# ================================================================
# OPTIONAL: EMAIL SERVICES (for contact forms)
# ================================================================
# SMTP configuration for sending emails
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"

# Email addresses
CONTACT_EMAIL_FROM="noreply@yourdomain.com"
CONTACT_EMAIL_TO="contact@yourdomain.com"

# ================================================================
# OPTIONAL: EXTERNAL API SERVICES
# ================================================================
# Google Analytics (if using GA4)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Google Maps API (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Uploadcare or similar service for image uploads
UPLOADCARE_PUBLIC_KEY="your-uploadcare-public-key"
UPLOADCARE_SECRET_KEY="your-uploadcare-secret-key"

# ================================================================
# OPTIONAL: DEVELOPMENT/DEBUGGING
# ================================================================
# Enable debug mode (development only)
DEBUG="false"

# Log level
LOG_LEVEL="info"

# ================================================================
# DEPLOYMENT SPECIFIC
# ================================================================
# For production deployments on Vercel, Netlify, etc.
NODE_ENV="development"
VERCEL_URL=""
NETLIFY_URL=""

# ================================================================
# SECURITY HEADERS (Production)
# ================================================================
# Content Security Policy
CSP_ENABLED="false"

# ================================================================
# NOTES:
# ================================================================
# 1. NEVER commit your actual .env file to version control
# 2. For production, use your deployment platform's environment variable system
# 3. Ensure DATABASE_URL points to your actual PostgreSQL instance
# 4. Generate a secure NEXTAUTH_SECRET for production
# 5. Update NEXTAUTH_URL to match your production domain
